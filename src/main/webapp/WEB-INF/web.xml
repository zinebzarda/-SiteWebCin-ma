<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">





    <servlet>
        <servlet-name>CinemaHome</servlet-name>
        <servlet-class>jee.javapack.servlets.CinemaHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CinemaHome</servlet-name>
        <url-pattern>/cinema-home</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DisplayFilms</servlet-name>
        <servlet-class>jee.javapack.servlets.DisplayFilms</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayFilms</servlet-name>
        <url-pattern>/shows</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddFilmServlet</servlet-name>
        <servlet-class>jee.javapack.servlets.AddFilmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFilmServlet</servlet-name>
        <url-pattern>/addFilm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>jee.javapack.servlets.Authentication</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/auth-user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>jee.javapack.servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/s</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReserveNow</servlet-name>
        <servlet-class>jee.javapack.servlets.ReserveNow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReserveNow</servlet-name>
        <url-pattern>/reserve-now</url-pattern>
    </servlet-mapping>

</web-app>